{
  "name": "box-to-box",
  "version": "1.0.0",
  "description": "Soccer box-to-box validation game with Wikidata integration",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"nodemon backend/server.js\" \"cd frontend && npm start\"",
    "test": "jest",
    "install-all": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "build-db": "node backend/scripts/buildPlayerDatabase.js"
  },
  "keywords": ["soccer", "football", "wikidata", "game"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "string-similarity": "^4.0.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "concurrently": "^8.2.2"
  }
}
